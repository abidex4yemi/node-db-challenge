{
  "name": "node-db-challenge",
  "version": "1.0.0",
  "description": "This challenge allows you to practice the concepts and techniques learned over the past Sprint and apply them in a concrete project.",
  "main": "index.js",
  "scripts": {
    "db:migrate": "npx knex migrate:latest --knexfile=./src/knexfile.js",
    "db:seed": "npx knex seed:run  --knexfile=./src/knexfile.js",
    "start": "npm run prod",
    "server": "babel-node ./src/server/start.js",
    "server:prod": "node ./dist/server/start.js",
    "dev": "NODE_ENV=development npm-run-all server",
    "clean": "rimraf dist",
    "build": "babel ./src --out-dir dist",
    "prod": "NODE_ENV=production npm-run-all clean build server:prod",
    "watch": "nodemon"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.18.0",
    "knex": "^0.16.3",
    "morgan": "~1.9.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "sqlite3": "^4.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-polyfill": "^6.26.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.1",
    "knex-cleaner": "^1.1.4",
    "nodemon": "^1.18.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abidex4yemi/node-db-challenge.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abidex4yemi/node-db-challenge/issues"
  },
  "homepage": "https://github.com/abidex4yemi/node-db-challenge#readme"
}
